<div class="container col-lg-9 mb-4" style="margin-top: 2em">
  <%= link_to "Back to Articles", articles_path, class: 'btn btn-secondary mb-4' %>
  <div class="card">
    <div class="card-header">
      <h1><%= @article.title %></h1>
      <p><span class="text-muted">By:</span> <%= @article.user.username %> |
        <span class="text-muted">Updated: </span> <%= @article.updated_at.strftime("%b %d, %Y")%></p>
    </div>
    <div class="card-body">
      <p class="card-text"><%= @article.body %></p>
      <% if current_user&.admin %>
      </div>
    </div>
    <div class="container-fluid mb-4 pb-4">
      <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-secondary my-4' %>
      <%= link_to "Delete", article_path(@article),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete #{@article.title}?" },
                  class: 'btn btn-danger' %>
    </div>
  <% end %>
  <div class="container-fluid">
    <% if !@article.comments.empty? %>
      <h2>Comments</h2>
      <%= render 'comments/comment' %>
    <% end %>
    <h2 class="mt-4">Add a comment:</h2>
    <%= render 'comments/form' %>
  </div>
</div>
